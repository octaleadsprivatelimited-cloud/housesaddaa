rules_version = '2';
// Firebase Storage rules (for property floor plans & brochures only). Gallery images are in Firestore. Deploy: firebase deploy --only storage
service firebase.storage {
  match /b/{bucket}/o {
    match /propertyFloorPlans/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /propertyBrochures/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
